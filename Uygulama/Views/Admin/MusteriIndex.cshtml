@model IEnumerable<Uygulama.Models.Models.Musteri>
@{
    ViewData["Title"] = "MusteriIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles
{
    <link href="~/lib/datatables.net-bs4/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.min.js"></script>
}
<a href="/Admin/MusteriCreate/" class="btn btn-primary">Yeni Musteri Kaydi Olustur</a>

<table class="table table-striped" id="myTable">
    <thead>
        <tr>
            <th>Müşteri Ad/Soyad</th>
            <th>Tel</th>
            <th>GSM</th>
            <th>EPosta</th>
            <th>Adres</th>
            <th>Emlak İsletmesi</th>
            <th>Portfoy islemleri</th>
            <th>Musteri Türü</th>
            <th>İşlem Seç</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Tamisim</td>
            <td>@item.Tel</td>
            <td>@item.GSM</td>
            <td>@item.EPosta</td>
            <td>@item.Adres</td>
            <td>@item.Emlak.EmlakAdi</td>
            @if (item.MustKategori == 0)
            {
                <td>
                    <a href="/Admin/FiltrePortfoy/">Uygun Portfoy Belirle</a>
                </td>
            }
            else
            {
                <td>
                    <a href="/Admin/PortfoyCreate/@item.MusteriId">Musteri Portfoyü Ekle</a>
                </td>
            }

            <td>@item.MustKategori</td>
            <td>
                <a href="/Admin/MusteriEdit/@item.MusteriId">Güncelle</a> || <a href="/Admin/MusteriDelete/@item.MusteriId">Sil</a>
            </td>
        </tr>
        }
    </tbody>
</table>

@section Scripts
{
    <script src="~/lib/datatables.net/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs4/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable(
                {
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                    }
                }
            );
        });
    </script>
}