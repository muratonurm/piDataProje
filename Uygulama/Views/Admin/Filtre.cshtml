@model IEnumerable<Uygulama.Models.Models.Portfoy>
@{
    ViewData["Title"] = "Filtre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles
{
    <link href="~/lib/datatables.net-bs4/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.min.js"></script>
}

<table class="table table-striped" id="myTable">
    <thead>
        <tr>
            <th>İlan Numarası</th>
            <th>IlanBasligi</th>
            <th>OdaSayisi</th>
            <th>Fiyat</th>
            <th>Isınma</th>
            <th>Kat</th>
            <th>Adres</th>
            <th>Tip</th>
            <th>İlan Detay</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PortfoyId</td>
                <td>@item.IlanBasligi</td>
                <td>@item.OdaSayisi</td>
                <td>@item.Fiyat TL </td>
                <td>@item.Isınma</td>
                <td>@item.Kat</td>
                <td>@item.MahalleId</td>
                <td>@item.TipId</td>
                <td><a href="/Admin/PortfoyDetay/@item.PortfoyId">İlan Detayına Git</a></td>
            </tr>
        }
    </tbody>
</table>








@section Scripts
{
    <script src="~/lib/datatables.net/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs4/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable(
                {
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                    }
                }
            );
        });
    </script>
}

